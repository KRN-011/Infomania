<% layout("/layouts/dashboard.ejs") %>


<table class="table table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name/Title</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% blogs.forEach((blog, index) => { %>
            <tr>
                <th scope="row">
                    <%= index + 1 %>
                </th>
                <td>
                    <%= blog.title %>
                </td>
                <td>
                    <%= blog.category && blog.category.name ? blog.category.name : "Uncategorized" %>
                </td>
                <td>
                    <%- blog.description.substring(0, 50) %>...
                </td>
                <td>
                    <a href="/blog/edit/<%= blog._id %>" class="btn btn-sm btn-primary me-2">Edit</a>
                    <a href="/blog/delete/<%= blog._id %>" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
